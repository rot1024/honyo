{
  "name": "honyo",
  "version": "0.2.0",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "_comment": "NOTE: 'build' and 'dist' scripts are temporary until Electron supports Node v24. See scripts/build-esbuild.js for details.",
    "start": "NODE_OPTIONS=\"--experimental-strip-types\" electron .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --cache",
    "lint:fix": "eslint src/**/*.ts --fix --cache",
    "format": "prettier --write \"src/**/*.ts\" \"*.html\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.html\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build": "node scripts/build.js",
    "build:icons": "node scripts/make-icons.mjs",
    "dist": "npm run build && electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "repository": "https://github.com/rot1024/honyo.git",
  "keywords": [],
  "author": "rot1024 <aayhrot@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rot1024/honyo/issues"
  },
  "homepage": "https://github.com/rot1024/honyo#readme",
  "description": "Instant AI translation anywhere: select text and double-copy (C+C)",
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.24.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "glob": "^11.0.0",
    "globals": "^16.3.0",
    "icon-gen": "^5.0.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "ai": "^5.0.0",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.6.2",
    "uiohook-napi": "^1.5.4",
    "zod": "^3.25.76"
  },
  "build": {
    "appId": "com.rot1024.honyo",
    "productName": "Honyo",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "rot1024",
      "repo": "honyo"
    },
    "files": [
      "build/**/*",
      "popup.html",
      "settings.html",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "build/main.js"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/uiohook-napi/**/*"
    ],
    "extraResources": [
      {
        "from": "src/ui/icon-normal.png",
        "to": "icons/icon-normal.png"
      },
      {
        "from": "src/ui/icon-translating.png",
        "to": "icons/icon-translating.png"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "npmRebuild": true,
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "icon": "assets/icons",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
